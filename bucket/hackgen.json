    "version": "1.2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/yuru7/HackGen/releases/download/v1.2.0/HackGen_v1.2.0.zip",
            "hash": "def0f9fe02c173044aef3ab54b9b113f34afd38e217cb6333c35402a10a35558"
        }
    },
    "post_install": [
        "$dst = (New-Object -ComObject Shell.Application).Namespace(0x14)",
        "$tmp = ($Env:TEMP + \"\\Fonts\")",
        "New-Item -ItemType Directory -Force -Path $tmp | Out-Null",
        "Get-ChildItem -Path $dir -Include '*.ttf','*.ttc' -Recurse | ForEach {",
        "    If (-not(Test-Path \"c:\\Windows\\Fonts\\$($_.Name)\")) {",
        "        $font = ($tmp + \"\\$($_.Name)\")",
        "        Copy-Item -Path $($_.FullName) -Destination $tmp",
        "        $dst.CopyHere($font, 0x10)",
        "        Remove-Item -Path $font -Force",
        "    }",
        "}"
    ],
    "uninstaller": "Get-ChildItem -Path $dir -Include '*.ttf','*.ttc' -Recurse | ForEach { If (Test-Path \"c:\\Windows\\Fonts\\$($_.Name)\") { Remove-Item -Path $($_.FullName) -Recurse -Force }}",
    "extract_dir": "HackGen_v1.2.0",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/yuru7/HackGen/releases/download/v$version/HackGen_v$version.zip"
            }
        }
    }
}
